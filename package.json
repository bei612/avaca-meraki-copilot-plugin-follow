{
  "name": "lobechat-plugin-boilerplate",
  "version": "2.0.0",
  "private": true,
  "description": "Production-ready Avaca plugin boilerplate with framework-business separation",
  "homepage": "https://github.com/your-org/lobechat-plugin-boilerplate",
  "repository": "https://github.com/your-org/lobechat-plugin-boilerplate.git",
  "workspaces": [
    "docs/*",
    "./*"
  ],
  "scripts": {
    "build": "next build",
    "ci": "npm run lint && npm run type-check",
    "dev": "next dev -p 3410",
    "dev:manifest": "echo 'Manifest at: http://localhost:3410/manifest.json'",
    "docs:build": "cd docs && npm run build",
    "docs:dev": "cd docs && npm run dev",
    "lint": "eslint \"{src,plugins,docs}/**/*.{js,jsx,ts,tsx}\" --fix",
    "lint:md": "remark . --quiet --frail --output",
    "lint:style": "stylelint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "new-plugin": "echo 'Create new plugin in plugins/ directory'",
    "prepare": "husky install",
    "prepublishOnly": "npm run ci && npm run build",
    "prettier": "prettier -c --write \"**/**\"",
    "release": "semantic-release",
    "start": "next start",
    "test": "vitest --passWithNoTests",
    "test:coverage": "vitest --coverage --passWithNoTests",
    "type-check": "tsc --noEmit",
    "validate": "npm run ci && echo 'Project validation passed!'"
  },
  "lint-staged": {
    "*.md": [
      "remark --quiet --output --",
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.json": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{js,jsx}": [
      "prettier --write",
      "stylelint --fix",
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "prettier --parser=typescript --write",
      "stylelint --fix",
      "eslint --fix"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "dependencies": {
    "@lobehub/chat-plugin-sdk": "^1",
    "@lobehub/chat-plugins-gateway": "^1",
    "@types/echarts": "^5.0.0",
    "antd": "^5",
    "antd-style": "^3",
    "dayjs": "^1",
    "echarts": "^6.0.0",
    "echarts-for-react": "^3.0.2",
    "next": "13.4.7",
    "react": "^18",
    "react-dom": "^18",
    "react-layout-kit": "^1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18",
    "@lobehub/lint": "latest",
    "@types/react": "18",
    "@vercel/node": "^2",
    "@vitest/coverage-v8": "latest",
    "commitlint": "^18",
    "cross-env": "^7",
    "eslint": "^8",
    "father": "4.3.1",
    "husky": "^8",
    "lint-staged": "^15",
    "prettier": "^3",
    "remark": "^14",
    "remark-cli": "^11",
    "semantic-release": "^21",
    "stylelint": "^15",
    "typescript": "^5",
    "vitest": "latest"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  }
}
